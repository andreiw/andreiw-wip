+static bool fiq_wakeup(struct fiq_debugger_state *state)
+{
+	if (!state->uart_clk_enabled) {
+		pm_stay_awake(&state->pdev->dev);
+		if (state->clk)
+			clk_enable(state->clk);
+		state->uart_clk_enabled = true;
+		mod_timer(&state->sleep_timer, jiffies + HZ / 2);
+		return true;
+	}
+	return false;
+}
